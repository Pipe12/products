<div class="container">
	<div class="col-xl-6 col-lg-6 col-md-6 col-sm-10 col-10">
		<div class="row">
			<h1>Nuevo producto</h1>
		</div>
		<div class="row">
			<!-- -->
			<%= form_with scope: :product, url: products_path, local: true do |form| %>
				<div class="form-group">
					<%= form.text_field :name, placeholder: "Nombre", class: "form-control" %>
				</div>
				<div class="form-group">
					<%= form.text_field :price, placeholder: "Precio", class: "form-control" %>
				</div>
				<div class="form_group">
					<ul>
						<% @categories.each do |category| %>
							<li>
								<%= check_box_tag "category_ids[#{category}]", category.id  %>
								<%= category.name %>
							</li>
						<% end %> 
					</ul>
				</div>
				<%= form.submit 'Nuevo producto', class: 'btn btn-primary btn-block' %>
			<% end %>
		</div>
	</div>
</div>