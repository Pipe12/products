<div class="container">
	<div class="row">
		<h1>Nuevo producto</h1>
	</div>

	<!-- -->
	<%= form_with scope: :product, local: true do |form| %>
		<div class="form-group">
			<%= form.text_field :name, placeholder: "Nombre", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= form.text_field :price, placeholder: "Precio", class: "form-control" %>
		</div>
	<% end %>
</div>